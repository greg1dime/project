{% extends '::base.html.twig' %}

{% block body -%}
    <h1>UserInformation list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Birthdate</th>
                <th>Birthplace</th>
                <th>Street</th>
                <th>House_no</th>
                <th>Apartment_no</th>
                <th>Code</th>
                <th>City</th>
                <th>Country</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('project_user_information_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{% if entity.birthDate %}{{ entity.birthDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.birthPlace }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.houseno }}</td>
                <td>{{ entity.apartmentno }}</td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.country }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.email }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('project_user_information_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('project_user_information_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('project_user_information_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
