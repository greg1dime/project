{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Experience list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Companyname</th>
                <th>Position</th>
                <th>Startdate</th>
                <th>Finishdate</th>
                <th>City</th>
                <th>Branch</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('project_experience_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.companyName }}</td>
                <td>{{ entity.position }}</td>
                <td>{% if entity.startDate %}{{ entity.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.finishDate %}{{ entity.finishDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.branch }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('project_experience_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('project_experience_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('project_experience_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
